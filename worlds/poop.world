  </model>  

  <model name="marker000">
    <include>
      <uri>model://marker000</uri>
    </include>
    <scale>1 1 1</scale>
    <pose>0.2 0 1.02 0 0 0</pose>
  </model>
  
  <model name="ground_plane">
   <include>
    <uri>model://ground_plane</uri>
   </include>

   <joint name='ground_joint' type='fixed'>
    <parent>ground_plane::link</parent>
    <child>table::link</child>
   </joint>
  </model>

 </world>
</sdf>
