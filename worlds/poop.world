<?xml version="1.0" ?>
<sdf version="1.6">
 <world name="CRANE-X7 with Table">
  <scene>
   <shadows>0</shadows>
  </scene>

  <include>
   <uri>model://sun</uri>
  </include>

  <model name="table">
   <include>
    <uri>model://table</uri>
